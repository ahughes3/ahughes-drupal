{% set link_blockname = featured_case_study__base_class %}
{% set link_url = featured_case_study__url %}

{% extends "@atoms/links/link/link.twig" %}
  {% block link_content %}
    {% if featured_case_study__brand %}
      {% include "@atoms/images/image/image.twig" with {
        output_image_tag: true,
        responsive_image_base_class: 'brand',
        image_src: featured_case_study__brand.src,
        image_alt: featured_case_study__brand.alt,
        responsive_image_blockname: featured_case_study__base_class,
      } %}
    {% endif %}
    {% if featured_case_study__image %}
      {{ content.field_promo_media }}
    {% endif %}
  {% endblock %}
