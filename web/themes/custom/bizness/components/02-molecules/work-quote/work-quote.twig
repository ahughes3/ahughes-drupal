{% set work_quote__base_class = 'work-quote' %}

<div {{ bem(work_quote__base_class, work_quote__modifiers, work_quote__blockname, ['section']) }}>
  {% include "@atoms/text/text/02-blockquote.twig" with {
    blockquote_content: work_quote__text
  } %}
  <div {{ bem('author-wrapper', [], work_quote__base_class) }}>
    <div {{ bem('author', [], work_quote__base_class) }}>
      {% include "@atoms/text/headings/_heading.twig" with {
        heading_modifiers: ['xs'],
        heading_level: 2,
        heading: work_quote__author_name,
      } %}
      {% include "@atoms/text/text/01-paragraph.twig" with {
        paragraph_modifiers: ['sm'],
        paragraph_base_class: 'label',
        paragraph_content: work_quote__author_title,
      } %}
    </div>
    {% include "@atoms/images/icons/_icon.twig" with {
      icon_name: 'quote',
      icon_base_class: 'icon',
    } %}
  </div>
</div>
