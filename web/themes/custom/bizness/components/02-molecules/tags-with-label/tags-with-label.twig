{#
/**
 * Available variables:
 * - tags_with_label__label: Component title.
 * - tags_with_label__tags: Related tags.
 */
#}

{% set tags_with_label__base_class = 'tags-with-label' %}

<div {{ bem(tags_with_label__base_class) }}>
  {% include "@atoms/text/text/01-paragraph.twig" with {
    paragraph_modifiers: ['sm'],
    paragraph_base_class: 'paragraph',
    paragraph_content: tags_with_label__label ~ ':',
  } %}
  <ul {{ bem('tags', [], tags_with_label__base_class) }}>
    {% for tag in tags_with_label__tags %}
      <li {{ bem('tag', [], tags_with_label__base_class) }}>
        {% include "@atoms/links/link/link.twig" with {
          link_url: tag.url,
          link_content: tag.title,
          link_modifiers: ['inline'],
        } %}
      </li>
    {% endfor %}
  </ul>
</div>
