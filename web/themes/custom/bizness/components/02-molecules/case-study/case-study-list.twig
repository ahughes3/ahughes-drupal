{#
/**
 * Available variables:
 * - case_studies__items: Case study list, including:
 *  - case_study__title: Client name.
 *  - case_study__content: Case study subtitle or intro text.
 *  - case_study__image: Creation date, including:
 *   - src: Image sources.
 *   - alt: Image Alt Text.
 *  - case_study__url: Case study URL.
 */
#}

{% set case_studies__base_class = 'case-studies-teaser' %}

{% if not case_studies__heading %}
  {% set case_studies__modifiers = 'no-heading' %}
{% endif %}

<div {{ bem(case_studies__base_class, case_studies__modifiers) }}>
  {% if case_studies__heading %}
    <div {{ bem('heading', [], case_studies__base_class) }}>
      {% include "@atoms/text/text/01-paragraph.twig" with {
        paragraph_modifiers: ['lg'],
        paragraph_base_class: 'label',
        paragraph_content: case_studies__heading,
      } %}
      {% if case_studies__url %}
      {% include "@atoms/links/link/link.twig" with {
          link_content: case_studies__link_text,
          link_modifiers: ['dark'],
          link_url: case_studies__url,
        } %}
      {% endif %}
    </div>
  {% endif %}
  <ul {{ bem('items', [], case_studies__base_class) }}>
    {% block case_studies %}
      {% for item in case_studies__items %}
        <li {{ bem('item', [], case_studies__base_class) }}>
          {% include "@molecules/case-study/case-study.twig" with item %}
        </li>
      {% endfor %}
    {% endblock %}
  </ul>
</div>
