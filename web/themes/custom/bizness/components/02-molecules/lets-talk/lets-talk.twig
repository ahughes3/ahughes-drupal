{% set lets_talk__base_class = 'lets-talk-component' %}

<div {{ bem(lets_talk__base_class) }}>
  {% if lets_talk__sub_heading %}
    <div {{ bem('subheading', [], lets_talk__base_class) }}>
      {% include "@atoms/text/text/01-paragraph.twig" with {
        paragraph_content: lets_talk__sub_heading,
        paragraph_base_class: 'label',
        paragraph_modifiers: ['md'],
      } %}
    </div>
  {% endif %}
  {% if lets_talk__heading %}
    {% include "@atoms/text/headings/_heading.twig" with {
      "heading_level": 2,
      "heading": lets_talk__heading,
      "heading_modifiers": ["2xl"],
    } %}
  {% endif %}
   {% if lets_talk_description %}
    <div {{ bem('description', [], lets_talk__base_class) }}>
      {% include "@atoms/text/text/01-paragraph.twig" with {
        paragraph_content: lets_talk_description,
        paragraph_modifiers: ['lg'],
      } %}
    </div>
  {% endif %}
  {% if lets_talk_link %}
      {% include "@atoms/buttons/button.twig" with {
      button_icon: 'arrow',
      button_url: lets_talk_link.url,
      button_modifiers: ['dark'],
      button_content: lets_talk_link.title,
      button_type: 'link',
    } %}
    {% endif %}
</div>
