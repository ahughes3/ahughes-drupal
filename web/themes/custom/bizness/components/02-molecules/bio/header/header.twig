{#
/**
 * Available variables:
 * - heading: Bio person name.
 * - heading_level: Bio name heading level.
 * - position: Bio position title.
 * - location: Bio location.
 * - pronouns: Array of available pronouns.
 * - links: Set of social links.
 */
#}
{% set bio_header__base_class = 'bio-header' %}
<div {{ bem(bio_header__base_class) }}>
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_modifiers: ['xl'],
    heading: heading,
    heading_level: heading_level,
  } %}
  <div {{ bem('sub-heading' ,[], bio_header__base_class) }}>
    {% include "@atoms/text/headings/_heading.twig" with {
      heading: position,
      heading_level: 2,
    } %}
    {% include "@atoms/text/text/01-paragraph.twig" with {
      paragraph_modifiers: ['xs'],
      paragraph_content: location,
    } %}
  </div>
  <div {{ bem('pronouns-social' ,[], bio_header__base_class) }}>
    {% if pronouns.0 %}
      <ul {{ bem('pronouns-list' ,[], bio_header__base_class) }}>
        {% for pronoun in pronouns %}
          <li>{{pronoun}}</li>
        {% endfor %}
      </ul>
    {% endif %}
    {% if links %}
      {% include "@molecules/social-links/_social-links.twig" with {
        links: links,
      } %}
    {% endif %}
  </div>
</div>
