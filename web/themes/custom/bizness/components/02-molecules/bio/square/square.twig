{#
/**
 * Available variables:
 * - name: Bio name
 * - image: Bio image
 * - position: Bio postion title
 * - pronouns: Bio preferied pronouns
 */
#}
{% set link_url = url %}
{% set link_base_class = 'bio-square__link' %}
{% set bio_square__base_class = 'bio-square' %}

{% extends "@atoms/links/link/link.twig" %}
  {% block link_content %}
    <div {{ bem(bio_square__base_class) }}>
      <div {{ bem('image-wrapper' ,[], bio_square__base_class) }}>
        {% include "@atoms/images/image/image.twig" with {
          image_src: image.src,
          image_alt: image.alt,
        } %}
      </div>
      <div>
        {% include "@atoms/text/headings/_heading.twig" with {
          heading: name,
          heading_level: 2,
          heading_modifiers: ['2xs'],
        } %}
        {% include "@atoms/text/text/01-paragraph.twig" with {
          paragraph_modifiers: ['xs'],
          paragraph_content: position,
        } %}
      </div>
    </div>
  {% endblock %}
