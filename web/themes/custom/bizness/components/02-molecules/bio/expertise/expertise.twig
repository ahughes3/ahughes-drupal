{#
/**
 * Available variables:
 * - expertise__image: image:
 * - expertise__heading: expertise person name.
 * - expertise_list: list
 */
 */
#}
{% set bio_expertise__base_class = 'bio-expertise' %}
<div {{ bem(bio_expertise__base_class) }}>
  {# Image #}
  {% block image_content %}
    {% if expertise__image %}
      <div {{ bem('image',[], bio_expertise__base_class) }}>
        {% include "@atoms/images/image/image.twig" with {
          output_image_tag: true,
          image_src: expertise__image.src,
          image_alt: expertise__image.alt,
        } %}
        {% include "@atoms/pattern/pattern.twig" %}
      </div>
    {% endif %}
  {% endblock %}
  <div {{ bem('content',[], bio_expertise__base_class) }}>
    {% if expertise_list %}
      <div {{ bem('inner',[], bio_expertise__base_class) }}>
      {# Heading #}
      {% include '@atoms/text/text/01-paragraph.twig' with {
        paragraph_modifiers: ['md'],
        paragraph_content: expertise__heading,
        paragraph_base_class: 'label',
      } %}

      {# List #}
      {% block expertise_list %}
        <ul {{ bem('items', [], bio_expertise__base_class) }}>
          {% for item in expertise_list %}
            <li {{ bem('item', [], bio_expertise__base_class) }}>
              <div {{bem('item-icon', [], bio_expertise__base_class)}}>
                {% include "@atoms/images/icons/_icon.twig" with {
                  icon_name: 'check',
                } %}
              </div>
              {% include "@atoms/text/headings/_heading.twig" with {
                heading_modifiers: ['2xs'],
                heading: item.text,
                heading_level: 2,
              } %}
            </li>
          {% endfor %}
        </ul>
      {% endblock %}
      </div>
    {% endif %}
  </div>
</div>
