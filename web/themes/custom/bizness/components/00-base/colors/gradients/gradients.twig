{% set gradients_base_class = "cl-gradients" %}

<div {{ bem(gradients_base_class) }}>
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 1,
    heading: gradients_heading,
    heading_base_class: gradients_base_class,
  } %}

  <ul>
    {% for gradient in gradients %}
      {% set gradient_name = gradient.name|lower|replace({' ': '-'}) %}
      <li {{ bem("gradient", [gradient_name], gradients_base_class) }}>
        {% include "@atoms/text/headings/_heading.twig" with {
          heading_level: 2,
          heading: gradient.name,
          heading_base_class: gradients_base_class,
        } %}
        <ul {{ bem("items", [gradient_name], gradients_base_class) }}>
          {% for item in gradient.items %}
            {% set color_name = item.color|lower|replace({' ': '-'}) %}
            {% set color_modifiers = color_name ~ '-' ~ item.from %}
            <li {{ bem("item", [gradient_name, color_modifiers], gradients_base_class) }}>
              <span
                {{ bem("swatch", [], gradients_base_class, ['clipboard-item']) }}
                data-copy="{{ '@include gradient(' ~ color_name ~ ', ' ~ item.from ~ ', ' ~ item.to ~ ');' }}"
                data-color={{ color_name }}
                data-from={{ item.from }}
                data-to={{ item.to }}
              ></span>
              <span {{ bem("title", [], gradients_base_class) }}>
                {{ item.name }}
              </span>
              <span {{ bem("from", [], gradients_base_class) }}>
                From: {{ item.color }} {{ item.from }}
              </span>
              <span {{ bem("to", [], gradients_base_class) }}>
                To: {{ item.color }} {{ item.to }}
              </span>
            </li>
          {% endfor %}
        </ul>
      </li>
    {% endfor %}
  </ul>
</div>
