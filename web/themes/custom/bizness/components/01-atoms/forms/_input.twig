{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}

{% set classes = [] %}
{% set is_submit = input_type == 'submit' %}

{% if is_submit %}
  {% set wrapper_attributes = create_attribute({'class': ['button_wrapper', 'submit']}) %}
  {% set attributes = attributes.removeClass(['button', 'button--primary']) %}
  <div {{wrapper_attributes}}>
    <input {{ attributes.addClass(classes) }} />{{ children }}
    {% include "@atoms/images/icons/_icon.twig" with {
      icon_name: 'arrow',
      icon_base_class: 'icon',
      icon_blockname: 'button',
    } %}
  </div>
{% else %}
  {% set classes = classes|merge(['form-item__textfield']) %}
  <input {{ attributes.addClass(classes) }} />{{ children }}
{% endif %}
