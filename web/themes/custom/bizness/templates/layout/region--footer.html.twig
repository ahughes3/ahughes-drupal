{% set footer__abbreviated = elements['#abbreviated'] %}
{% extends "@organisms/site/site-footer/site-footer.twig" %}
{% block footer__connect %}
  {% include "@molecules/lets-talk/lets-talk.twig" with {
    lets_talk__heading: footer_lets_talk_title,
    lets_talk__sub_heading: footer_lets_talk_pre_title,
    lets_talk_description: footer_lets_talk_description,
    lets_talk_link: {
      url: footer_lets_talk_link_url,
      title: footer_lets_talk_link_text,
    }
  } %}
{% endblock %}

{% block footer__menu %}
  {{ elements.footer_menu }}
{% endblock %}

{% block footer__newsletter %}
  {{ elements.footer_newsletter }}
{% endblock %}
