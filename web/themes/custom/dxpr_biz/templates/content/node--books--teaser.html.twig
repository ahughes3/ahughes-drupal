{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>

  <div class="row">

    {# Check if book image exists and render it in the left column #}
    {% if content.field_book_cover %}
    <div class="col-sm-4">
      <div class="node__image">
        {{ content.field_book_cover }}
      </div>
    </div>
    {% endif %}

    <div class="col-sm-8">
      <div class="node__content">

        {{ title_prefix }}
        <h2{{ title_attributes.addClass('node__title') }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
        {{ title_suffix }}

        {# Author #}
        {% if content.field_author %}
        <div class="book-author">
          {{ content.field_author }}
        </div>
        {% endif %}

        {# Display brief book description #}
        {% if content.body %}
        <div class="book-body">
        {{ content.body }}
        </div>
        {% endif %}

        {# Bookshop Button #}
        {% if content.field_buy_url %}
        <div class="book-buy-url">
        {{ content.field_buy_url }}
        </div>
        {% endif %}

      </div>
    </div>

  </div>

</article>